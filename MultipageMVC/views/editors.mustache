{{>header}}
{{>navigation}}

<div class="row">
  <div class="leftcolumn">
    <div class="card">
      <h2>Editors</h2>
      <p>Only editors should be able to view this page!</p>

      <!-- Users Table -->
      <h3>Users</h3>
      <table>
        <tr><th>Username</th><th>Password</th><th>Access Level</th><th>Delete</th></tr>
        {{#users}}
        <tr>
          <td>{{username}}</td>
          <td>{{password}}</td>
          <td>{{access_level}}</td>
          <td>
            <form action="/editors/delete-user/{{id}}" method="POST">
              <button type="submit">D</button>
            </form>
          </td>
        </tr>
        {{/users}}
      </table>

      <!-- Articles Table -->
      <h3>Articles</h3>
      <table>
        <tr><th>Title</th><th>Author</th><th>Delete</th></tr>
        {{#articles}}
        <tr>
          <td>{{title}}</td>
          <td>{{author}}</td>
          <td>
            <form action="/editors/delete-article/{{title}}" method="POST">
              <button type="submit">D</button>
            </form>
          </td>
        </tr>
        {{/articles}}
      </table>
    </div>
  </div>

  {{>sidebar}}
</div>

{{>footer}}
